@{
    ViewData["Title"] = "Wechselkurs";
    ViewData["BodyTitle"] = "Wechselkurs";
}

<div>
    <a class="btn btn-outline-primary m-2" asp-action="EurToZsk">EUR zu ZSK</a>
    <a class="btn btn-outline-primary m-2" asp-action="ZskToEur">ZSK zu EUR</a>
    <form asp-action="ExchangeRate" method="post">
        <div class="row">
            <div class="col">
                <input asp-for="@Calculator.ExchangeRateCow" disabled/>
                <label asp-for="@Calculator.ExchangeRateCow">EUR pro Kuh</label>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <input asp-for="@Calculator.ExchangeRateSheep" />
                <label asp-for="@Calculator.ExchangeRateSheep">EUR pro Schaf</label>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <input asp-for="@Calculator.ExchangeRateGoat" />
                <label asp-for="@Calculator.ExchangeRateGoat">EUR pro Ziege</label>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <input asp-for="@Calculator.ExchangeRateLittleGoat" />
                <label asp-for="@Calculator.ExchangeRateLittleGoat">EUR pro kleine Ziege</label>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-primary m-2">Wechselkurs Ändern</button>
    </form>
</div>