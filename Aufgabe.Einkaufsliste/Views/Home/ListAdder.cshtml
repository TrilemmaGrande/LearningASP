@{
    ViewData["Title"] = "Add";
    ViewData["BodyTitle"] = "Add Item";
}
@model Item


<form asp-action="Confirmation" method="post">
    <input class="form-control" asp-for="Name" placeholder="Article" />
    <select class="form-control" asp-for="Amount">
        <option Selected>Amount</option>
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
        <option>7</option>
        <option>8</option>
        <option>9</option>
        <option>10</option>
    </select>
    <select class="form-control" asp-for="Store">
        <option Selected value="">Store</option>
        <option>Netto</option>
        <option>Penny</option>
        <option>Aldi</option>
        <option>Lidl</option>
        <option>Kaufland</option>
        <option>Edeka</option>
        <option>Rewe</option>
        <option>Andere...</option>
    </select>
    <button class="btn btn-primary" type="submit">Insert</button>
    <a class="btn btn-outline-primary" asp-action="Index">Home</a>
</form>