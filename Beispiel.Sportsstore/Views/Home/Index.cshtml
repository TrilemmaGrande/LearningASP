@model ProductListViewModel

<h4>Welcome to Sportstore</h4>

@foreach (var p in Model.Products)
{
    <div>
        <h3>@p.Name</h3>
        @p.Description
        <h4>@p.Price.ToString("c")</h4>
    </div>
}

@for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
{
    <a asp-action="Index" asp-route-productPage="@i">@i</a>
}