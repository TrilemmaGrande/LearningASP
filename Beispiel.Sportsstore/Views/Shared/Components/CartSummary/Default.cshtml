@model Cart

    <div>
        @if (Model.Lines.Count() > 0)
        {
            <small class="navbar-text">
                <b>Your Cart:</b>
                @Model.Lines.Sum(l => l.Quantity) item(s)
                @Model.ComputeTotalValue().ToString("c")
            </small>            
        }
    <a class="btn btn-sm btn-outline-info navbar-btn" asp-action="Cart" asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
    </div>