@{
    Layout = null;
}
@model List<GuestResponse>
<!DOCTYPE html>
<html>
<head>
    <title>Responses</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="text-center" p-2>
        <h2>Here is a list of people attending to the party</h2>
        <table class="table table-bordered table-striped table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Index" class="btn btn-primary">Home</a>
    </div>
</body>
</html>
